<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- TabLayout定义的样式 -->
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TabSubTextStyle">
        <item name="android:textSize">14sp</item>
    </style>
    <!-- Home页的控件边距样式 -->
    <style name="HomeLayout7">
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_marginLeft">7dp</item>
    </style>
    <!-- RecyclerView的搜索列表字体样式 -->
    <style name="SelectListFontTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#263238</item>
    </style>
    <style name="SelectListFontPrice">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#D32F2F</item>
    </style>

    <style name="DeepOrange" parent="AppTheme" >
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="MenuStyle">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
